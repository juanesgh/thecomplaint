<!DOCTYPE html>
<html>
<head>
    <title>Profie</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
    <titulo><%= @usr.name %>'s Profile</titulo>
        <div align="right">
    
    </div>
    <hr>
    <div class= "r">
        <button class="btn btn-primary btn-md" onclick="window.location.href='users/1/edit'">Edit</button>
    </div>
    

    <div class= "c">
        <% if @usr.avatar.attached? %>
            <%=image_tag @usr.avatar.variant(resize: "100x100") %>
            <% else %>
            No Image
            <% end %>
        <br>
        <br>

        User Name: 
            <%= @usr.name %> <%= @usr.lastname %><br>
        <br>
        Email: 
            <%= @usr.email %><br>
        <br>
        City: 
            <%= @usr.city %><br>
        <br>
        Location: 
        <br>
        <br>
    </div>

    <div class= "c">
        <style>
        
        #map {
            height: 200px;  
            width: 100%;  
        }
        </style>
    
        <div id="map"></div>
            <script>
                function initMap() {
                var uluru = {lat: -25.344, lng: 131.036};
                var map = new google.maps.Map(
                document.getElementById('map'), {zoom: 4, center: uluru});
                var marker = new google.maps.Marker({position: uluru, map: map});
                }
            </script>
            
            <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB9EocpLO0L43BJBXB6LCr8MGkfxLH2Ie8&callback=initMap">
            </script>
    </div>
    <div class= "c">
        
        <br>
        Country: 
            <%= @usr.country %><br>
        <br>
        <p>Bio</p>
        <br>
            <textarea rows="5" cols="60">
            </textarea>
        <br>
        <br>
        <table align="center">
        <tr>
            <th>Post Title</th>
            <th>Action</th>
        </tr>
        
        
        </table>
        <br>
        <br>
        <button class="btn btn-primary btn-md" onclick="window.location.href=#">User Activity</button>
        <br>
        <br>
    </div>
    
    
</body>
</html>